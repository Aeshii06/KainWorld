@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link rel="Stylesheet" href="~/css/Sliding-Images.css" />
</head>

<!-- Container for the image gallery -->
<div class="container">
    </div>
    <!-- Full-width images with number text -->
    <div class="mySlides" style="display: none;">
        <div class="numbertext">1 / 6</div>
        <img src="~/Media/Keqing 1.jpg" style="width:100%">
    </div>

    <div class="mySlides" style="display: none;">
        <div class="numbertext">2 / 6</div>
        <img src="~/media/Keqing 2.jpg" style="width:100%">
    </div>

    <div class="mySlides" style="display: none;">
        <div class="numbertext">3 / 6</div>
        <img src="~/media/Keqing 3.jpg" style="width:100%">
    </div>

    <div class="mySlides" style="display: none;">
        <div class="numbertext">4 / 6</div>
        <img src="~/Media/Keqing 4.jpg" style="width:100%">
    </div>

<div class="mySlides" style="display: none;">
        <div class="numbertext">5 / 6</div>
        <img src="~/media/Keqing 5.jpg" style="width:100%">
    </div>

<div class="mySlides" style="display: none;">
        <div class="numbertext">6 / 6</div>
        <img src="~/media/Keqing 6.jpg" style="width:100%">
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    <!-- Image text -->
    <div class="caption-container">
        <p id="caption"></p>
    </div>

    <!-- Thumbnail images -->
    <div class="row">
        <div class="column">
            <img class="demo cursor" src="~/media/Keqing 1.jpg" style="width:100%" onclick="currentSlide(1)" alt="Keqing 1">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/media/Keqing 2.jpg" style="width:100%" onclick="currentSlide(2)" alt="Keqing 2">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/media/Keqing 3.jpg" style="width:100%" onclick="currentSlide(3)" alt="Keqing 3">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/media/Keqing 4.jpg" style="width:100%" onclick="currentSlide(4)" alt="Keqing 4">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/media/Keqing 5.jpg" style="width:100%" onclick="currentSlide(5)" alt="Keqing 5">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/media/Keqing 6.jpg" style="width:100%" onclick="currentSlide(6)" alt="Keqing 6">
        </div>
    </div>
</div>  
<script type="text/javascript" href="~/js/Sliding-Images.js"></script>